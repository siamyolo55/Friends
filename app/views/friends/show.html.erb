<table class="table table-striped table-striped-columns">
    <thead class="table-dark">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
      </tr>
    </thead>
    <tbody>
        <%= render @friend %>
      </tr>
    </tbody>
  </table>



<div>
  <%= link_to "Edit", edit_friend_path(@friend), class: 'btn btn-dark' %> |
  <%= link_to "Back", friends_path, class: 'btn btn-dark' %>
  <br/><br/>
  <%= button_to "Destroy this friend", @friend, method: :delete, class: 'btn btn-danger' %>
</div>
